---
import Base from '@layouts/Base.astro';
import PageCloser from '@components/PageCloser.astro';
import Butterfly from '@components/Butterfly.astro';

const base = import.meta.env.BASE_URL.replace(/\/$/, '');

// EVOLEA True Color Palette - extracted from evolea.ch
const colors = {
  primary: [
    { name: 'Magenta', hex: '#DD48E0', rgb: '221, 72, 224', usage: 'Primary accent, CTAs, highlights' },
    { name: 'Hot Pink', hex: '#EF5EDB', rgb: '239, 94, 219', usage: 'Secondary accent, hover states' },
    { name: 'Fuchsia Glow', hex: '#E97BF1', rgb: '233, 123, 241', usage: 'Gradients, overlays, glows' },
  ],
  spectrum: [
    { name: 'Mint Teal', hex: '#7BEDD5', rgb: '123, 237, 213', usage: 'Fresh accents, success, nature' },
    { name: 'Sunshine', hex: '#FFE066', rgb: '255, 224, 102', usage: 'Joy, warmth, highlights' },
    { name: 'Coral', hex: '#FF7E5D', rgb: '255, 126, 93', usage: 'Warm highlights, energy' },
    { name: 'Soft Coral', hex: '#C96861', rgb: '201, 104, 97', usage: 'Muted accents, earthy warmth' },
    { name: 'Gold', hex: '#DCD49F', rgb: '220, 212, 159', usage: 'Luxury accents, sophistication' },
    { name: 'Lavender', hex: '#CD87F8', rgb: '205, 135, 248', usage: 'Soft purple, calm energy' },
    { name: 'Deep Purple', hex: '#BA53AD', rgb: '186, 83, 173', usage: 'Text on light, deep accents' },
    { name: 'Sky Blue', hex: '#5DADE2', rgb: '93, 173, 226', usage: 'Cool accents, trust, clarity' },
  ],
  neutrals: [
    { name: 'Pure White', hex: '#FFFFFF', rgb: '255, 255, 255', usage: 'Backgrounds, text on dark' },
    { name: 'Soft Pink', hex: '#FFDEDE', rgb: '255, 222, 222', usage: 'Light backgrounds, cards' },
    { name: 'Blush', hex: '#EF8EAE', rgb: '239, 142, 174', usage: 'Soft accents, borders' },
    { name: 'Cream', hex: '#FFFBF7', rgb: '255, 251, 247', usage: 'Page background' },
    { name: 'Dark Text', hex: '#2D2A32', rgb: '45, 42, 50', usage: 'Primary text' },
    { name: 'Light Text', hex: '#5C5762', rgb: '92, 87, 98', usage: 'Secondary text' },
  ],
};

const gradients = [
  {
    name: 'Prism Bold (NEW)',
    css: 'linear-gradient(135deg, #4ECDC4 0%, #FFE066 18%, #FF9ECC 36%, #E97BF1 54%, #CD87F8 72%, #9B3D9B 100%)',
    cssVar: '--gradient-prism-bold',
    description: 'BOLD prism - richer colors, no white. Use for page closers and premium sections.',
    isNew: true,
  },
  {
    name: 'Prism (Signature)',
    css: 'linear-gradient(118deg, #7BEDD5 0%, #FFE066 21%, #FFFFFF 48%, #E97BF1 81%, #CD87F8 100%)',
    cssVar: '--gradient-prism',
    description: 'THE signature EVOLEA gradient - light through a prism. Use for hero sections, CTAs, and key moments.',
  },
  {
    name: 'Ultra Bold',
    css: 'linear-gradient(135deg, #4ECDC4 0%, #FFE066 20%, #FF6B9D 40%, #C44FE0 60%, #9B59B6 80%, #6B3FA0 100%)',
    cssVar: '--gradient-ultra-bold',
    description: 'Maximum impact - bold teal to deep violet. For premium hero sections.',
    isNew: true,
  },
  {
    name: 'Spectrum Flow',
    css: 'linear-gradient(90deg, #7BEDD5 0%, #FFE066 16%, #FF7E5D 32%, #EF8EAE 48%, #E97BF1 64%, #CD87F8 80%, #7BEDD5 100%)',
    cssVar: '--gradient-spectrum',
    description: 'Full spectrum loop - great for animated backgrounds and decorative lines.',
  },
  {
    name: 'Magenta Burst',
    css: 'linear-gradient(135deg, #9B3D9B 0%, #C44FE0 50%, #E97BF1 100%)',
    cssVar: '--gradient-magenta',
    description: 'Bold magenta gradient for primary buttons and strong CTAs. Richer purples.',
  },
  {
    name: 'Ocean Dream',
    css: 'linear-gradient(135deg, #4ECDC4 0%, #5DADE2 50%, #B56FE8 100%)',
    cssVar: '--gradient-ocean',
    description: 'Cool, calming gradient - deeper mint to sky to purple.',
  },
  {
    name: 'Sunset Warmth',
    css: 'linear-gradient(135deg, #FFD84D 0%, #FF6B4A 50%, #C44FE0 100%)',
    cssVar: '--gradient-sunset',
    description: 'Warm, energetic gradient - richer gold to vibrant coral to magenta.',
  },
];

const cssVariables = `
:root {
  /* Primary Colors */
  --evolea-magenta: #DD48E0;
  --evolea-magenta-light: #EF5EDB;
  --evolea-magenta-vivid: #E97BF1;

  /* Purple Family */
  --evolea-purple: #BA53AD;
  --evolea-purple-light: #CD87F8;
  --evolea-purple-dark: #8A3D9E;

  /* Spectrum Colors */
  --evolea-mint: #7BEDD5;
  --evolea-yellow: #FFE066;
  --evolea-coral: #FF7E5D;
  --evolea-gold: #DCD49F;
  --evolea-pink: #EF8EAE;
  --evolea-sky: #5DADE2;

  /* Neutrals */
  --evolea-cream: #FFFBF7;
  --evolea-text: #2D2A32;
  --evolea-text-light: #5C5762;

  /* Gradients */
  --gradient-prism: linear-gradient(118deg, #7BEDD5 0%, #FFE066 21%, #FFFFFF 48%, #E97BF1 81%, #CD87F8 100%);
  --gradient-prism-vivid: linear-gradient(118deg, #7BEDD5 0%, #FFE066 15%, #FFDEDE 35%, #E97BF1 65%, #CD87F8 85%, #DD48E0 100%);
  --gradient-spectrum: linear-gradient(90deg, #7BEDD5 0%, #FFE066 16%, #FF7E5D 32%, #EF8EAE 48%, #E97BF1 64%, #CD87F8 80%, #7BEDD5 100%);
  --gradient-magenta: linear-gradient(135deg, #BA53AD 0%, #DD48E0 50%, #E97BF1 100%);

  /* Shadows */
  --shadow-soft: 0 4px 20px rgba(186, 83, 173, 0.15);
  --shadow-card: 0 8px 30px rgba(186, 83, 173, 0.2);
  --shadow-glow-magenta: 0 0 60px rgba(221, 72, 224, 0.5);
  --shadow-glow-mint: 0 0 60px rgba(123, 237, 213, 0.5);
}`;

const tailwindConfig = `
// tailwind.config.mjs
colors: {
  evolea: {
    magenta: '#DD48E0',
    'magenta-light': '#EF5EDB',
    'magenta-vivid': '#E97BF1',
    purple: '#BA53AD',
    'purple-light': '#CD87F8',
    mint: '#7BEDD5',
    yellow: '#FFE066',
    coral: '#FF7E5D',
    gold: '#DCD49F',
    pink: '#EF8EAE',
    sky: '#5DADE2',
    cream: '#FFFBF7',
    text: '#2D2A32',
    'text-light': '#5C5762',
  }
}`;
---

<Base title="EVOLEA Brand Guide" description="Comprehensive EVOLEA Brand Guidelines - Colors, Typography, Logo, Butterfly, Components">
  <!-- Hero with Bold Prism Gradient -->
  <section class="brand-hero relative min-h-[80vh] flex items-center justify-center overflow-hidden">
    <!-- Bold Animated Gradient Background -->
    <div class="absolute inset-0 brand-hero-bg"></div>

    <!-- Floating Orbs -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <div class="absolute w-96 h-96 rounded-full opacity-50 blur-3xl" style="background: radial-gradient(circle, #4ECDC4 0%, #3DB8AC 100%); top: -10%; left: -5%;"></div>
      <div class="absolute w-80 h-80 rounded-full opacity-40 blur-3xl" style="background: radial-gradient(circle, #FFE066 0%, #FFC83D 100%); top: 20%; right: 10%;"></div>
      <div class="absolute w-72 h-72 rounded-full opacity-50 blur-3xl" style="background: radial-gradient(circle, #FF6B9D 0%, #E84C82 100%); bottom: 10%; left: 20%;"></div>
    </div>

    <!-- Floating butterflies -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <div class="absolute top-20 left-[10%] opacity-50 animate-float">
        <Butterfly size="lg" variant="spectrum" />
      </div>
      <div class="absolute top-40 right-[15%] opacity-40 animate-float-delayed">
        <Butterfly size="md" variant="white" />
      </div>
      <div class="absolute bottom-32 left-[20%] opacity-30 animate-float-slow">
        <Butterfly size="sm" variant="spectrum" />
      </div>
    </div>

    <div class="relative z-10 text-center px-4 py-20">
      <p class="brand-hero-label">Internal Brand Guide v2.1</p>

      <!-- Logo with Butterfly -->
      <div class="flex items-center justify-center gap-4 mb-8">
        <h1 class="brand-hero-title">
          EVOLEA
        </h1>
        <!-- Butterfly Icon -->
        <svg class="w-16 h-16 md:w-24 md:h-24 -ml-4 -mt-8" viewBox="0 0 100 100">
          <defs>
            <linearGradient id="butterfly-main-left" x1="0%" y1="0%" x2="100%" y2="100%">
              <stop offset="0%" stop-color="#5DADE2"/>
              <stop offset="100%" stop-color="#CD87F8"/>
            </linearGradient>
            <linearGradient id="butterfly-main-right" x1="0%" y1="0%" x2="100%" y2="100%">
              <stop offset="0%" stop-color="#EF8EAE"/>
              <stop offset="100%" stop-color="#DD48E0"/>
            </linearGradient>
          </defs>
          <!-- Left wings -->
          <path d="M48 50 C35 25, 5 20, 10 45 C5 70, 35 75, 48 55 Z" fill="url(#butterfly-main-left)"/>
          <path d="M48 55 C35 60, 15 85, 30 90 C45 85, 48 65, 48 55 Z" fill="url(#butterfly-main-left)" opacity="0.8"/>
          <!-- Right wings -->
          <path d="M52 50 C65 25, 95 20, 90 45 C95 70, 65 75, 52 55 Z" fill="url(#butterfly-main-right)"/>
          <path d="M52 55 C65 60, 85 85, 70 90 C55 85, 52 65, 52 55 Z" fill="url(#butterfly-main-right)" opacity="0.8"/>
          <!-- Body -->
          <ellipse cx="50" cy="55" rx="3" ry="15" fill="#2D2A32"/>
          <!-- Antennae -->
          <path d="M48 42 Q45 35, 40 30" stroke="#2D2A32" stroke-width="1.5" fill="none"/>
          <path d="M52 42 Q55 35, 60 30" stroke="#2D2A32" stroke-width="1.5" fill="none"/>
          <circle cx="40" cy="30" r="2" fill="#DD48E0"/>
          <circle cx="60" cy="30" r="2" fill="#7BEDD5"/>
        </svg>
      </div>

      <p class="text-xl md:text-2xl text-white/90 max-w-2xl mx-auto drop-shadow">
        A spectrum of possibilities. Bold, vibrant, full of transformation.
      </p>

      <div class="mt-8 flex flex-wrap justify-center gap-4">
        <a href="#colors" class="px-6 py-3 bg-white/20 backdrop-blur-sm rounded-full text-white font-semibold hover:bg-white/30 transition-all">Colors</a>
        <a href="#butterfly" class="px-6 py-3 bg-white/20 backdrop-blur-sm rounded-full text-white font-semibold hover:bg-white/30 transition-all">Butterfly</a>
        <a href="#logo" class="px-6 py-3 bg-white/20 backdrop-blur-sm rounded-full text-white font-semibold hover:bg-white/30 transition-all">Logo</a>
        <a href="#implementation" class="px-6 py-3 bg-white/20 backdrop-blur-sm rounded-full text-white font-semibold hover:bg-white/30 transition-all">Implementation</a>
      </div>
    </div>
  </section>

  <!-- Brand Philosophy -->
  <section class="py-20 px-4 bg-white">
    <div class="container mx-auto max-w-4xl">
      <h2 class="text-3xl md:text-4xl font-display font-bold mb-8" style="color: #BA53AD;">Brand Philosophy</h2>
      <div class="prose prose-lg max-w-none">
        <p class="text-lg text-gray-700 leading-relaxed mb-6">
          EVOLEA's visual identity celebrates the <strong>spectrum</strong> - not just the autism spectrum, but the full spectrum of light, possibility, and human potential. Our colors aren't primary or childish - they're <strong>sophisticated, vibrant, and energetic</strong>.
        </p>
        <p class="text-lg text-gray-700 leading-relaxed mb-6">
          The <strong>butterfly</strong> is our symbol of transformation. Just as a butterfly emerges in brilliant colors, EVOLEA helps children discover and express their unique brilliance. The butterfly's wings reflect our prism gradient - blue/purple on one side, pink/coral on the other - representing the full spectrum of possibilities.
        </p>
        <div class="grid md:grid-cols-3 gap-6 my-8">
          <div class="p-6 rounded-2xl text-center" style="background: linear-gradient(135deg, #7BEDD5 0%, #CD87F8 100%);">
            <span class="text-4xl">ðŸŒˆ</span>
            <h4 class="font-display font-bold text-white mt-2">Spectrum</h4>
            <p class="text-white/80 text-sm">Light through a prism</p>
          </div>
          <div class="p-6 rounded-2xl text-center" style="background: linear-gradient(135deg, #DD48E0 0%, #E97BF1 100%);">
            <span class="text-4xl">ðŸ¦‹</span>
            <h4 class="font-display font-bold text-white mt-2">Transformation</h4>
            <p class="text-white/80 text-sm">Evolution & growth</p>
          </div>
          <div class="p-6 rounded-2xl text-center" style="background: linear-gradient(135deg, #FFE066 0%, #FF7E5D 100%);">
            <span class="text-4xl">âš¡</span>
            <h4 class="font-display font-bold text-white mt-2">Energy</h4>
            <p class="text-white/80 text-sm">Bold & vibrant</p>
          </div>
        </div>
        <div class="bg-gray-50 p-6 rounded-2xl border-l-4" style="border-color: #DD48E0;">
          <p class="text-gray-700 italic m-0">
            "Not a children's book aesthetic - but someone full of energy on the spectrum who loves big, bold gradient colors."
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Butterfly Section -->
  <section id="butterfly" class="py-20 px-4" style="background: linear-gradient(180deg, #FFFBF7 0%, #FFDEDE 50%, #FFFBF7 100%);">
    <div class="container mx-auto max-w-6xl">
      <h2 class="text-3xl md:text-4xl font-display font-bold mb-4" style="color: #DD48E0;">The EVOLEA Butterfly</h2>
      <p class="text-lg text-gray-600 mb-12">Our symbol of transformation - use it throughout the design</p>

      <!-- Butterfly Showcase -->
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8 mb-16">
        <!-- Full Color -->
        <div class="bg-white rounded-2xl p-8 shadow-lg text-center">
          <svg class="w-32 h-32 mx-auto mb-4" viewBox="0 0 100 100">
            <defs>
              <linearGradient id="bf-full-left" x1="0%" y1="0%" x2="100%" y2="100%">
                <stop offset="0%" stop-color="#5DADE2"/>
                <stop offset="100%" stop-color="#CD87F8"/>
              </linearGradient>
              <linearGradient id="bf-full-right" x1="0%" y1="0%" x2="100%" y2="100%">
                <stop offset="0%" stop-color="#EF8EAE"/>
                <stop offset="100%" stop-color="#DD48E0"/>
              </linearGradient>
            </defs>
            <path d="M48 50 C35 25, 5 20, 10 45 C5 70, 35 75, 48 55 Z" fill="url(#bf-full-left)"/>
            <path d="M48 55 C35 60, 15 85, 30 90 C45 85, 48 65, 48 55 Z" fill="url(#bf-full-left)" opacity="0.8"/>
            <path d="M52 50 C65 25, 95 20, 90 45 C95 70, 65 75, 52 55 Z" fill="url(#bf-full-right)"/>
            <path d="M52 55 C65 60, 85 85, 70 90 C55 85, 52 65, 52 55 Z" fill="url(#bf-full-right)" opacity="0.8"/>
            <ellipse cx="50" cy="55" rx="3" ry="15" fill="#2D2A32"/>
            <path d="M48 42 Q45 35, 40 30" stroke="#2D2A32" stroke-width="1.5" fill="none"/>
            <path d="M52 42 Q55 35, 60 30" stroke="#2D2A32" stroke-width="1.5" fill="none"/>
            <circle cx="40" cy="30" r="2" fill="#DD48E0"/>
            <circle cx="60" cy="30" r="2" fill="#7BEDD5"/>
          </svg>
          <h4 class="font-display font-bold">Full Spectrum</h4>
          <p class="text-sm text-gray-500">Primary usage</p>
        </div>

        <!-- Magenta -->
        <div class="bg-white rounded-2xl p-8 shadow-lg text-center">
          <svg class="w-32 h-32 mx-auto mb-4" viewBox="0 0 100 100">
            <defs>
              <linearGradient id="bf-mag" x1="0%" y1="0%" x2="100%" y2="100%">
                <stop offset="0%" stop-color="#BA53AD"/>
                <stop offset="100%" stop-color="#DD48E0"/>
              </linearGradient>
            </defs>
            <path d="M48 50 C35 25, 5 20, 10 45 C5 70, 35 75, 48 55 Z" fill="url(#bf-mag)"/>
            <path d="M48 55 C35 60, 15 85, 30 90 C45 85, 48 65, 48 55 Z" fill="url(#bf-mag)" opacity="0.7"/>
            <path d="M52 50 C65 25, 95 20, 90 45 C95 70, 65 75, 52 55 Z" fill="url(#bf-mag)"/>
            <path d="M52 55 C65 60, 85 85, 70 90 C55 85, 52 65, 52 55 Z" fill="url(#bf-mag)" opacity="0.7"/>
            <ellipse cx="50" cy="55" rx="3" ry="15" fill="#2D2A32"/>
          </svg>
          <h4 class="font-display font-bold">Magenta Mono</h4>
          <p class="text-sm text-gray-500">Simplified</p>
        </div>

        <!-- Mint -->
        <div class="bg-white rounded-2xl p-8 shadow-lg text-center">
          <svg class="w-32 h-32 mx-auto mb-4" viewBox="0 0 100 100">
            <defs>
              <linearGradient id="bf-mint" x1="0%" y1="0%" x2="100%" y2="100%">
                <stop offset="0%" stop-color="#7BEDD5"/>
                <stop offset="100%" stop-color="#5DADE2"/>
              </linearGradient>
            </defs>
            <path d="M48 50 C35 25, 5 20, 10 45 C5 70, 35 75, 48 55 Z" fill="url(#bf-mint)"/>
            <path d="M48 55 C35 60, 15 85, 30 90 C45 85, 48 65, 48 55 Z" fill="url(#bf-mint)" opacity="0.7"/>
            <path d="M52 50 C65 25, 95 20, 90 45 C95 70, 65 75, 52 55 Z" fill="url(#bf-mint)"/>
            <path d="M52 55 C65 60, 85 85, 70 90 C55 85, 52 65, 52 55 Z" fill="url(#bf-mint)" opacity="0.7"/>
            <ellipse cx="50" cy="55" rx="3" ry="15" fill="#2D2A32"/>
          </svg>
          <h4 class="font-display font-bold">Mint Mono</h4>
          <p class="text-sm text-gray-500">Cool variant</p>
        </div>

        <!-- White (for dark bg) -->
        <div class="rounded-2xl p-8 shadow-lg text-center" style="background: linear-gradient(135deg, #BA53AD 0%, #DD48E0 100%);">
          <svg class="w-32 h-32 mx-auto mb-4" viewBox="0 0 100 100">
            <path d="M48 50 C35 25, 5 20, 10 45 C5 70, 35 75, 48 55 Z" fill="white" opacity="0.9"/>
            <path d="M48 55 C35 60, 15 85, 30 90 C45 85, 48 65, 48 55 Z" fill="white" opacity="0.7"/>
            <path d="M52 50 C65 25, 95 20, 90 45 C95 70, 65 75, 52 55 Z" fill="white" opacity="0.9"/>
            <path d="M52 55 C65 60, 85 85, 70 90 C55 85, 52 65, 52 55 Z" fill="white" opacity="0.7"/>
            <ellipse cx="50" cy="55" rx="3" ry="15" fill="white"/>
          </svg>
          <h4 class="font-display font-bold text-white">White</h4>
          <p class="text-sm text-white/70">On dark backgrounds</p>
        </div>
      </div>

      <!-- Butterfly SVG Code -->
      <div class="bg-gray-900 rounded-2xl p-6 overflow-x-auto">
        <h4 class="text-white font-bold mb-4">SVG Code - Full Spectrum Butterfly</h4>
        <pre class="text-green-400 text-sm"><code>&lt;svg viewBox="0 0 100 100"&gt;
  &lt;defs&gt;
    &lt;linearGradient id="wing-left" x1="0%" y1="0%" x2="100%" y2="100%"&gt;
      &lt;stop offset="0%" stop-color="#5DADE2"/&gt;
      &lt;stop offset="100%" stop-color="#CD87F8"/&gt;
    &lt;/linearGradient&gt;
    &lt;linearGradient id="wing-right" x1="0%" y1="0%" x2="100%" y2="100%"&gt;
      &lt;stop offset="0%" stop-color="#EF8EAE"/&gt;
      &lt;stop offset="100%" stop-color="#DD48E0"/&gt;
    &lt;/linearGradient&gt;
  &lt;/defs&gt;
  &lt;!-- Left wings --&gt;
  &lt;path d="M48 50 C35 25, 5 20, 10 45 C5 70, 35 75, 48 55 Z" fill="url(#wing-left)"/&gt;
  &lt;path d="M48 55 C35 60, 15 85, 30 90 C45 85, 48 65, 48 55 Z" fill="url(#wing-left)" opacity="0.8"/&gt;
  &lt;!-- Right wings --&gt;
  &lt;path d="M52 50 C65 25, 95 20, 90 45 C95 70, 65 75, 52 55 Z" fill="url(#wing-right)"/&gt;
  &lt;path d="M52 55 C65 60, 85 85, 70 90 C55 85, 52 65, 52 55 Z" fill="url(#wing-right)" opacity="0.8"/&gt;
  &lt;!-- Body --&gt;
  &lt;ellipse cx="50" cy="55" rx="3" ry="15" fill="#2D2A32"/&gt;
&lt;/svg&gt;</code></pre>
      </div>

      <!-- Butterfly Usage -->
      <div class="mt-12 grid md:grid-cols-3 gap-6">
        <div class="bg-white rounded-2xl p-6 shadow-md">
          <h4 class="font-display font-bold mb-2" style="color: #DD48E0;">Decorative</h4>
          <p class="text-gray-600 text-sm">Float butterflies in backgrounds with varying opacity (40-60%) and sizes</p>
        </div>
        <div class="bg-white rounded-2xl p-6 shadow-md">
          <h4 class="font-display font-bold mb-2" style="color: #DD48E0;">Icons</h4>
          <p class="text-gray-600 text-sm">Use as bullet points, section markers, or loading indicators</p>
        </div>
        <div class="bg-white rounded-2xl p-6 shadow-md">
          <h4 class="font-display font-bold mb-2" style="color: #DD48E0;">Logo Companion</h4>
          <p class="text-gray-600 text-sm">Always paired with the EVOLEA wordmark in the main logo</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Color Palette -->
  <section id="colors" class="py-20 px-4 bg-white">
    <div class="container mx-auto max-w-6xl">
      <h2 class="text-3xl md:text-4xl font-display font-bold mb-4" style="color: #BA53AD;">Color Palette</h2>
      <p class="text-lg text-gray-600 mb-12">Our true spectrum - extracted from evolea.ch</p>

      <!-- Primary Colors -->
      <div class="mb-16">
        <h3 class="text-xl font-display font-bold mb-6" style="color: #DD48E0;">Primary - The Magentas</h3>
        <div class="grid md:grid-cols-3 gap-6">
          {colors.primary.map((color) => (
            <div class="bg-white rounded-2xl overflow-hidden shadow-lg border">
              <div class="h-32" style={`background: ${color.hex};`}></div>
              <div class="p-4">
                <div class="flex justify-between items-center mb-2">
                  <span class="font-bold">{color.name}</span>
                  <code class="text-sm bg-gray-100 px-2 py-1 rounded">{color.hex}</code>
                </div>
                <p class="text-xs text-gray-400 mb-2">RGB: {color.rgb}</p>
                <p class="text-sm text-gray-500">{color.usage}</p>
              </div>
            </div>
          ))}
        </div>
      </div>

      <!-- Spectrum Colors -->
      <div class="mb-16">
        <h3 class="text-xl font-display font-bold mb-6" style="color: #7BEDD5;">Spectrum Colors</h3>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
          {colors.spectrum.map((color) => (
            <div class="bg-white rounded-xl overflow-hidden shadow-md border">
              <div class="h-24" style={`background: ${color.hex};`}></div>
