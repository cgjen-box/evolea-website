---
import Base from '@layouts/Base.astro';
import InnerPageHero from '@components/InnerPageHero.astro';
import PageCloser from '@components/PageCloser.astro';
import Icon from '@components/Icon.astro';
import { getLangFromUrl, useTranslatedPath } from '@i18n/utils';

const lang = getLangFromUrl(Astro.url);
const translatePath = useTranslatedPath(lang);
const base = import.meta.env.BASE_URL.replace(/\/$/, '');

// Bank details - DO NOT MODIFY
const bankDetails = {
  name: 'EVOLEA Verein',
  address: 'Stapferstrasse 10, 8006 Zürich',
  bank: 'UBS Switzerland AG',
  iban: 'CH90 0023 0230 9206 9201 G',
  bic: 'UBSWCHZH80A',
};
---

<Base
  title="Spenden"
  description="Unterstützen Sie Kinder im Spektrum. EVOLEA ist ein gemeinnütziger Verein in Zürich."
  transparentHeader={true}
  hideFooterCTA={true}
>
  <!-- Premium Hero with Prism Gradient -->
  <InnerPageHero
    title="Kleine Beiträge. Grosse Wirkung."
    subtitle="Wir haben gerade unser erstes Projekt abgeschlossen. Das Mini Restaurant war ein voller Erfolg. Jetzt bauen wir weiter."
    breadcrumbs={[
      { label: 'Startseite', href: translatePath('/') },
      { label: 'Spenden' }
    ]}
    label="Gemeinnütziger Verein"
    size="md"
  />

  <!-- ===== SUCCESS STORY: Was wir erreicht haben ===== -->
  <section class="py-16 md:py-24 bg-white">
    <div class="container mx-auto max-w-6xl px-4">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <!-- Instagram Reel Embed -->
        <div class="instagram-embed-wrapper">
          <div class="instagram-reel-container rounded-evolea-lg overflow-hidden shadow-elevated">
            <iframe
              src="https://www.instagram.com/reel/DRcoCiaDJ-r/embed/"
              class="instagram-reel-iframe"
              frameborder="0"
              scrolling="no"
              allowtransparency="true"
              allowfullscreen="true"
              title="EVOLEA Mini Restaurant - Instagram Reel"
            ></iframe>
          </div>
        </div>

        <!-- Story Content -->
        <div>
          <span class="inline-block text-sm font-semibold text-evolea-purple uppercase tracking-wider mb-4">
            Was wir erreicht haben
          </span>
          <h2 class="text-3xl md:text-4xl font-display font-bold text-evolea-purple mb-6 leading-tight">
            Mini Restaurant: 10 Wochen, die zählen
          </h2>
          <p class="text-lg text-evolea-text-light mb-4 leading-relaxed">
            Kochen. Servieren. Abräumen. Klingt einfach.
            Für Kinder im Spektrum ist das ein riesiger Schritt.
          </p>
          <p class="text-lg text-evolea-text-light mb-6 leading-relaxed">
            10 Wochen lang haben Kinder gemeinsam gekocht,
            Rollen übernommen und soziale Kompetenz aufgebaut.
            Nicht in der Theorie. Im echten Leben.
          </p>

          <!-- Impact List -->
          <ul class="space-y-4">
            <li class="flex items-center gap-4">
              <div class="w-12 h-12 bg-evolea-purple/10 rounded-full flex items-center justify-center flex-shrink-0">
                <Icon name="people" size="md" />
              </div>
              <span class="font-medium text-evolea-text">Kinder haben teilgenommen</span>
            </li>
            <li class="flex items-center gap-4">
              <div class="w-12 h-12 bg-evolea-mint/20 rounded-full flex items-center justify-center flex-shrink-0">
                <Icon name="calendar" size="md" />
              </div>
              <span class="font-medium text-evolea-text">10 Wochen strukturiertes Lernen</span>
            </li>
            <li class="flex items-center gap-4">
              <div class="w-12 h-12 bg-evolea-coral/20 rounded-full flex items-center justify-center flex-shrink-0">
                <Icon name="sparkle" size="md" />
              </div>
              <span class="font-medium text-evolea-text">Neue soziale Fähigkeiten gelernt</span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- ===== WHY DONATE: Warum Ihre Hilfe zählt ===== -->
  <section class="py-16 md:py-24 bg-evolea-cream/50">
    <div class="container mx-auto max-w-5xl px-4">
      <div class="text-center mb-12">
        <span class="inline-block text-sm font-semibold text-evolea-purple uppercase tracking-wider mb-4">
          Warum Ihre Hilfe zählt
        </span>
        <h2 class="text-3xl md:text-4xl font-display font-bold text-evolea-purple mb-4">
          Ihre Spende reduziert den Beitrag, den Eltern zahlen müssen
        </h2>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        <!-- Reason 1: Rooms -->
        <div class="bg-white rounded-evolea-lg p-8 shadow-soft hover:shadow-elevated transition-shadow">
          <div class="w-16 h-16 bg-evolea-purple/10 rounded-full flex items-center justify-center mb-6">
            <svg class="w-8 h-8 text-evolea-purple" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
            </svg>
          </div>
          <h3 class="text-xl font-display font-bold text-evolea-purple mb-3">Räume kosten</h3>
          <p class="text-evolea-text-light leading-relaxed">
            Kleine Gruppen brauchen sichere Räume.
            Diese Räume muss jemand bezahlen.
          </p>
        </div>

        <!-- Reason 2: Staff -->
        <div class="bg-white rounded-evolea-lg p-8 shadow-soft hover:shadow-elevated transition-shadow">
          <div class="w-16 h-16 bg-evolea-mint/20 rounded-full flex items-center justify-center mb-6">
            <svg class="w-8 h-8 text-evolea-mint" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-display font-bold text-evolea-purple mb-3">Fachpersonal ist wichtig</h3>
          <p class="text-evolea-text-light leading-relaxed">
            Unsere Fachpersonen sind hochqualifiziert.
            BCBAs, Psycholog:innen, Pädagog:innen.
            Und die arbeiten nicht gratis.
          </p>
        </div>

        <!-- Reason 3: Materials -->
        <div class="bg-white rounded-evolea-lg p-8 shadow-soft hover:shadow-elevated transition-shadow">
          <div class="w-16 h-16 bg-evolea-coral/20 rounded-full flex items-center justify-center mb-6">
            <svg class="w-8 h-8 text-evolea-coral" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
            </svg>
          </div>
          <h3 class="text-xl font-display font-bold text-evolea-purple mb-3">Material braucht's auch</h3>
          <p class="text-evolea-text-light leading-relaxed">
            Kochzutaten, Bastelmaterial, Turngeräte.
            Die Details machen den Unterschied.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- ===== UPCOMING PROJECTS: Was kommt als Nächstes ===== -->
  <section class="py-16 md:py-24 bg-white">
    <div class="container mx-auto max-w-5xl px-4">
      <div class="text-center mb-12">
        <span class="inline-block text-sm font-semibold text-evolea-purple uppercase tracking-wider mb-4">
          Was kommt als Nächstes
        </span>
        <h2 class="text-3xl md:text-4xl font-display font-bold text-evolea-purple mb-4">
          Zwei Projekte, die auf Sie warten
        </h2>
        <p class="text-lg text-evolea-text-light max-w-2xl mx-auto">
          Das Mini Restaurant hat funktioniert. Jetzt wollen wir weitermachen.
          Mit Ihrer Hilfe starten diese zwei Angebote.
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-8">
        <!-- Mini Turnen -->
        <div class="group relative bg-evolea-cream/50 rounded-evolea-lg p-8 border-2 border-transparent hover:border-evolea-purple transition-all">
          <span class="absolute top-4 right-4 text-xs font-semibold text-white bg-evolea-purple px-3 py-1 rounded-full">
            Start: Januar 2025
          </span>

          <div class="w-16 h-16 bg-evolea-mint/20 rounded-full flex items-center justify-center mb-6">
            <svg class="w-8 h-8 text-evolea-mint" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>

          <h3 class="text-2xl font-display font-bold text-evolea-purple mb-2">Mini Turnen</h3>
          <p class="text-evolea-purple font-medium italic mb-4">Bewegung. In einer Gruppe, die versteht.</p>

          <p class="text-evolea-text-light mb-4">
            Sport im Verein? Für viele Kinder im Spektrum undenkbar.
            Zu laut, zu chaotisch, zu viele ungeschriebene Regeln.
          </p>
          <p class="text-evolea-text-light mb-6">
            Mini Turnen ist anders. Kleine Gruppe. Klare Struktur.
            Und Erwachsene, die wissen, was sie tun.
          </p>

          <div class="flex flex-wrap gap-2 mb-6">
            <span class="text-sm bg-white px-3 py-1 rounded-full text-evolea-text">Mittwochs 18:30</span>
            <span class="text-sm bg-white px-3 py-1 rounded-full text-evolea-text">5–8 Jahre</span>
            <span class="text-sm bg-white px-3 py-1 rounded-full text-evolea-text">Kleine Gruppe</span>
          </div>

          <a href={translatePath('/angebote/mini-turnen/')} class="inline-flex items-center gap-2 font-semibold text-evolea-purple hover:gap-3 transition-all">
            Mehr erfahren
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>

        <!-- Mini Museum -->
        <div class="group relative bg-evolea-cream/50 rounded-evolea-lg p-8 border-2 border-transparent hover:border-evolea-purple transition-all">
          <span class="absolute top-4 right-4 text-xs font-semibold text-white bg-evolea-purple px-3 py-1 rounded-full">
            Start: Februar 2026
          </span>

          <div class="w-16 h-16 bg-evolea-magenta/10 rounded-full flex items-center justify-center mb-6">
            <svg class="w-8 h-8 text-evolea-magenta" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
          </div>

          <h3 class="text-2xl font-display font-bold text-evolea-purple mb-2">Mini Museum</h3>
          <p class="text-evolea-purple font-medium italic mb-4">Kunst machen. Kunst zeigen. Stolz sein.</p>

          <p class="text-evolea-text-light mb-4">
            Kreativität braucht keinen Smalltalk.
            Im Mini Museum arbeiten Kinder an eigenen Kunstprojekten.
            Und zeigen sie dann in einer echten Ausstellung.
          </p>
          <p class="text-evolea-text-light mb-6">
            Der Fokus: Schaffen, nicht Reden.
            Etwas Eigenes machen und dafür gesehen werden.
          </p>

          <div class="flex flex-wrap gap-2 mb-6">
            <span class="text-sm bg-white px-3 py-1 rounded-full text-evolea-text">Samstags 09:00</span>
            <span class="text-sm bg-white px-3 py-1 rounded-full text-evolea-text">Ca. jede 2. Woche</span>
            <span class="text-sm bg-white px-3 py-1 rounded-full text-evolea-text">5–8 Jahre</span>
          </div>

          <a href={translatePath('/angebote/mini-museum/')} class="inline-flex items-center gap-2 font-semibold text-evolea-purple hover:gap-3 transition-all">
            Mehr erfahren
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- ===== HOW TO DONATE: So können Sie helfen ===== -->
  <section id="donate-section" class="py-16 md:py-24 donate-section">
    <div class="container mx-auto max-w-6xl px-4">
      <div class="grid lg:grid-cols-5 gap-12">
        <!-- Bank Details (3 cols) -->
        <div class="lg:col-span-3">
          <span class="inline-block text-sm font-semibold text-evolea-lavender uppercase tracking-wider mb-4">
            So können Sie helfen
          </span>
          <h2 class="text-3xl md:text-4xl font-display font-bold text-white mb-4">
            Direkt. Einfach. Wirksam.
          </h2>
          <p class="text-lg text-white/90 mb-8">
            Keine komplizierte Online-Plattform.
            Einfach überweisen. Jeder Franken kommt an.
          </p>

          <!-- Bank Details Card -->
          <div class="bg-white/10 backdrop-blur-sm rounded-evolea-lg p-6 mb-6">
            <h3 class="font-display font-bold text-white text-lg mb-4">Bankverbindung</h3>

            <div class="space-y-3">
              <div class="flex justify-between items-start py-3 border-b border-white/10">
                <span class="text-white/70 text-sm">Kontoinhaber</span>
                <span class="text-white font-semibold text-right">
                  {bankDetails.name}<br/>
                  <span class="font-normal text-sm">{bankDetails.address}</span>
                </span>
              </div>
              <div class="flex justify-between items-center py-3 border-b border-white/10">
                <span class="text-white/70 text-sm">IBAN</span>
                <span class="text-white font-mono font-semibold">{bankDetails.iban}</span>
              </div>
              <div class="flex justify-between items-center py-3 border-b border-white/10">
                <span class="text-white/70 text-sm">Bank</span>
                <span class="text-white font-semibold">{bankDetails.bank}</span>
              </div>
              <div class="flex justify-between items-center py-3 border-b border-white/10">
                <span class="text-white/70 text-sm">BIC/SWIFT</span>
                <span class="text-white font-mono font-semibold">{bankDetails.bic}</span>
              </div>
              <div class="flex justify-between items-center py-3">
                <span class="text-white/70 text-sm">Verwendungszweck</span>
                <span class="text-white font-semibold">Spende EVOLEA</span>
              </div>
            </div>
          </div>

          <!-- Tax Info -->
          <div class="bg-white/5 border border-white/10 rounded-evolea-lg p-6">
            <h3 class="font-display font-bold text-white text-lg mb-4">Gut zu wissen</h3>
            <ul class="space-y-3">
              <li class="flex items-start gap-3 text-white/90">
                <svg class="w-5 h-5 text-evolea-yellow flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span><strong class="text-white">Gemeinnützig:</strong> EVOLEA ist ein gemeinnütziger Verein und von der Steuer befreit.</span>
              </li>
              <li class="flex items-start gap-3 text-white/90">
                <svg class="w-5 h-5 text-evolea-yellow flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span><strong class="text-white">Steuerabzug:</strong> Spenden ab CHF 100 können bei der Steuererklärung abgezogen werden.</span>
              </li>
              <li class="flex items-start gap-3 text-white/90">
                <svg class="w-5 h-5 text-evolea-yellow flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span><strong class="text-white">Transparenz:</strong> Auf Wunsch senden wir Ihnen gerne eine Spendenbestätigung.</span>
              </li>
            </ul>
          </div>
        </div>

        <!-- Donation Amounts Card (2 cols) -->
        <div class="lg:col-span-2">
          <div class="bg-white rounded-evolea-lg p-8 shadow-elevated">
            <h3 class="text-xl font-display font-bold text-evolea-purple text-center mb-6">
              Was Ihre Spende bewirkt
            </h3>

            <div class="space-y-3">
              <div class="flex justify-between items-center p-4 bg-evolea-cream/50 rounded-evolea">
                <span class="font-display font-bold text-evolea-purple text-lg">CHF 50</span>
                <span class="text-evolea-text-light text-sm text-right">Material für eine Aktivität</span>
              </div>
              <div class="flex justify-between items-center p-4 bg-evolea-cream/50 rounded-evolea">
                <span class="font-display font-bold text-evolea-purple text-lg">CHF 150</span>
                <span class="text-evolea-text-light text-sm text-right">Ein Kind, eine Session</span>
              </div>
              <div class="flex justify-between items-center p-4 bg-evolea-cream/50 rounded-evolea">
                <span class="font-display font-bold text-evolea-purple text-lg">CHF 500</span>
                <span class="text-evolea-text-light text-sm text-right">Ein Kind, ein ganzes Projekt</span>
              </div>
              <div class="flex justify-between items-center p-4 bg-gradient-to-r from-evolea-yellow to-evolea-coral/80 rounded-evolea">
                <span class="font-display font-bold text-evolea-purple text-lg">CHF 1'500</span>
                <span class="text-evolea-text font-medium text-sm text-right">Projekt-Pate für ein Quartal</span>
              </div>
            </div>

            <!-- Copy IBAN Button -->
            <button
              id="copy-iban-btn"
              class="mt-6 w-full py-3 px-6 bg-evolea-purple text-white font-semibold rounded-full hover:bg-evolea-purple/90 transition-colors flex items-center justify-center gap-2"
              data-iban={bankDetails.iban.replace(/\s/g, '')}
            >
              <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
              </svg>
              <span id="copy-text">IBAN kopieren</span>
            </button>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- ===== CONTACT PERSON ===== -->
  <section class="py-16 md:py-20 bg-evolea-cream/50">
    <div class="container mx-auto max-w-2xl px-4">
      <div class="flex flex-col md:flex-row items-center gap-8 text-center md:text-left">
        <div class="w-32 h-32 rounded-full overflow-hidden shadow-elevated flex-shrink-0 bg-white">
          <img
            src={`${base}/images/team/gianna-spiess.png`}
            alt="Gianna Spiess"
            class="w-full h-full object-cover"
          />
        </div>
        <div>
          <h3 class="font-display font-bold text-evolea-purple text-xl mb-1">Fragen? Einfach fragen.</h3>
          <p class="font-semibold text-evolea-purple text-lg">Gianna Spiess</p>
          <p class="text-evolea-text-light text-sm mb-3">M.Sc., BCBA – Mitgründerin</p>
          <p class="text-evolea-text-light mb-4">
            Sie möchten wissen, wohin Ihre Spende geht?
            Haben Sie eine Idee für eine Zusammenarbeit?
            Schreiben Sie mir.
          </p>
          <a href="mailto:hello@evolea.ch" class="inline-flex items-center gap-2 font-semibold text-evolea-purple hover:underline">
            hello@evolea.ch
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Page Closer with custom message -->
  <PageCloser
    showCTA={true}
    ctaTitle="Kinder brauchen keine perfekte Welt."
    ctaDescription="Sie brauchen Räume, die zu ihnen passen. Sie können einen schaffen."
    ctaButtonText="Ich will helfen"
    ctaButtonHref="#donate-section"
  />
</Base>


<script>
  const copyBtn = document.getElementById('copy-iban-btn');
  const copyText = document.getElementById('copy-text');

  if (copyBtn && copyText) {
    copyBtn.addEventListener('click', async () => {
      const iban = copyBtn.getAttribute('data-iban');
      if (iban) {
        try {
          await navigator.clipboard.writeText(iban);
          const originalText = copyText.textContent;
          copyText.textContent = 'Kopiert!';
          copyBtn.classList.add('bg-evolea-green', 'hover:bg-evolea-green/90');
          copyBtn.classList.remove('bg-evolea-purple', 'hover:bg-evolea-purple/90');

          setTimeout(() => {
            copyText.textContent = originalText;
            copyBtn.classList.remove('bg-evolea-green', 'hover:bg-evolea-green/90');
            copyBtn.classList.add('bg-evolea-purple', 'hover:bg-evolea-purple/90');
          }, 2000);
        } catch (err) {
          console.error('Failed to copy:', err);
        }
      }
    });
  }
</script>

<style>
  /* Donate Section Gradient Background */
  .donate-section {
    background: linear-gradient(135deg, #BA53AD 0%, #8A3D7E 50%, #5C2854 100%);
    position: relative;
  }

  /* Instagram Reel Container */
  .instagram-embed-wrapper {
    display: flex;
    justify-content: center;
  }

  .instagram-reel-container {
    position: relative;
    width: 100%;
    max-width: 400px;
    background: #FFFBF7;
  }

  /* Aspect ratio container for reel (9:16 vertical video) */
  .instagram-reel-container::before {
    content: "";
    display: block;
    padding-top: 177.78%; /* 16:9 inverted = 9:16 aspect ratio */
  }

  .instagram-reel-iframe {
    position: absolute;
    top: 0;
