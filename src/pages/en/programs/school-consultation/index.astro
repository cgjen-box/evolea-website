---
import Base from '@layouts/Base.astro';
import { getLangFromUrl, useTranslations, useTranslatedPath } from '@i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);
---

<Base title="School Consultation" description="Consultation and support for teachers and schools working with children on the autism spectrum.">
  <section class="py-20 px-4">
    <div class="container mx-auto max-w-4xl">
      <nav class="mb-8 text-sm text-evolea-text-light">
        <a href={translatePath('/')} class="hover:text-evolea-purple">Home</a>
        <span class="mx-2">/</span>
        <a href={translatePath('/programs/')} class="hover:text-evolea-purple">Programs</a>
        <span class="mx-2">/</span>
        <span class="text-evolea-purple">School Consultation</span>
      </nav>
      
      <div class="text-6xl mb-6">üè´</div>
      <h1 class="text-4xl md:text-5xl font-bold text-evolea-purple mb-6">
        School Consultation
      </h1>
      <p class="text-xl text-evolea-text-light mb-8">
        Consultation and support for teachers
      </p>
      
      <div class="prose prose-lg max-w-none">
        <h2 class="text-2xl font-semibold text-evolea-purple mt-12 mb-4">Who is it for?</h2>
        <p class="text-evolea-text-light mb-6">
          Our consultation services are designed for teachers, school teams, and school administrators who teach children on the autism spectrum or with ADHD.
        </p>
        
        <h2 class="text-2xl font-semibold text-evolea-purple mt-12 mb-4">What do we offer?</h2>
        <p class="text-evolea-text-light mb-6">
          We support with specific questions in daily school life, adapting teaching methods, and creating an inclusive classroom climate. We offer individual consultations, team training, and on-site support.
        </p>
        
        <h2 class="text-2xl font-semibold text-evolea-purple mt-12 mb-4">Our approach</h2>
        <p class="text-evolea-text-light mb-6">
          We work solution-oriented and practically. Our recommendations are based on current scientific findings and our years of experience working with neurodiverse children.
        </p>
      </div>
      
      <div class="mt-12">
        <a href={translatePath('/contact/')} class="btn-primary">
          {t('common.contact')}
        </a>
      </div>
    </div>
  </section>
</Base>
