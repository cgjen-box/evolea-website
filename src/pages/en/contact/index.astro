---
import Base from '@layouts/Base.astro';
import InnerPageHero from '@components/InnerPageHero.astro';
import EditLink from '@components/EditLink.astro';
import { getLangFromUrl, useTranslatedPath } from '@i18n/utils';
import { getEntry } from 'astro:content';

const lang = getLangFromUrl(Astro.url);
const translatePath = useTranslatedPath(lang);

// Get contact page singleton
const contactEntry = await getEntry('pages', 'contact');
const contact = contactEntry?.data;

// Get site settings
const siteSettingsEntry = await getEntry('settings', 'site');
const siteSettings = siteSettingsEntry?.data;

// Helper to get bilingual text
const getText = (obj: { de?: string; en?: string } | undefined, fallback: string = '') => {
  if (!obj) return fallback;
  return lang === 'de' ? (obj.de || fallback) : (obj.en || obj.de || fallback);
};

// Get contact info from settings or contact page
const email = contact?.kontaktInfo?.email || siteSettings?.kontakt?.email || 'hello@evolea.ch';
const telefon = contact?.kontaktInfo?.telefon || siteSettings?.kontakt?.telefon || '+41 78 959 19 74';
const whatsapp = contact?.kontaktInfo?.whatsapp || siteSettings?.kontakt?.whatsapp || 'https://wa.me/41789591974';
const instagram = contact?.kontaktInfo?.instagramUrl || siteSettings?.social?.instagram || 'https://www.instagram.com/evolea.verein/';
const instagramHandle = contact?.kontaktInfo?.instagram || '@evolea.verein';

// Address
const adresse = contact?.adresse || siteSettings?.adresse || {};
const strasse = adresse.strasse || 'Stapferstrasse 10';
const plz = adresse.plz || '8006';
const ort = adresse.ort || 'ZÃ¼rich';
const land = adresse.land || 'Switzerland';
const hinweis = getText(adresse.hinweis, 'Near Rigiblick cable car');

// Form subjects from contact singleton
const betreffs = contact?.formular?.betreffs || [];
const formspreeId = contact?.formular?.formspreeId || 'xpznqrjk';
---

<Base title="Contact" description={`Contact EVOLEA - we look forward to your inquiry. Location: ${strasse}, ${plz} ${ort}.`} transparentHeader={true}>
  <!-- Edit Link for Keystatic -->
  <EditLink type="singleton" collection="contact" label="Edit Contact" />

  <!-- Premium Hero with Prism Gradient -->
  <InnerPageHero
    title={getText(contact?.hero?.titel, 'Contact')}
    subtitle={getText(contact?.hero?.untertitel, "Do you have questions about our programs? We look forward to hearing from you.")}
    breadcrumbs={[
      { label: 'Home', href: translatePath('/') },
      { label: 'Contact' }
    ]}
    label="Contact"
    size="sm"
  />

  <!-- Contact Content -->
  <section class="py-16 md:py-24">
    <div class="container mx-auto max-w-6xl px-4">
      <div class="grid lg:grid-cols-2 gap-12">
        <!-- Contact Info -->
        <div>
          <h2 class="text-2xl font-display font-bold text-evolea-purple mb-8">{getText(contact?.kontaktInfo?.sectionTitel, "How to reach us")}</h2>

          <div class="space-y-6">
            <!-- Email -->
            <div class="flex items-start gap-4 p-4 bg-white rounded-evolea-lg shadow-soft">
              <div class="w-12 h-12 bg-evolea-purple/10 rounded-full flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-evolea-purple" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div>
                <h3 class="font-display font-bold text-evolea-purple">Email</h3>
                <a href={`mailto:${email}`} class="text-evolea-text-light hover:text-evolea-purple transition-colors">
                  {email}
                </a>
              </div>
            </div>

            <!-- Phone / WhatsApp -->
            <div class="flex items-start gap-4 p-4 bg-white rounded-evolea-lg shadow-soft">
              <div class="w-12 h-12 bg-evolea-mint/10 rounded-full flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-evolea-mint" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <div>
                <h3 class="font-display font-bold text-evolea-purple">Phone / WhatsApp</h3>
                <a href={whatsapp} target="_blank" rel="noopener noreferrer" class="text-evolea-text-light hover:text-evolea-purple transition-colors">
                  {telefon}
                </a>
              </div>
            </div>

            <!-- Address -->
            <div class="flex items-start gap-4 p-4 bg-white rounded-evolea-lg shadow-soft">
              <div class="w-12 h-12 bg-evolea-coral/10 rounded-full flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-evolea-coral" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <div>
                <h3 class="font-display font-bold text-evolea-purple">Location</h3>
                <p class="text-evolea-text-light">
                  {strasse}<br>
                  {plz} {ort}<br>
                  {land}
                </p>
                <p class="text-sm text-evolea-text-light/70 mt-1">
                  ({hinweis})
                </p>
              </div>
            </div>

            <!-- Instagram -->
            <div class="flex items-start gap-4 p-4 bg-white rounded-evolea-lg shadow-soft">
              <div class="w-12 h-12 bg-evolea-magenta/10 rounded-full flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-evolea-magenta" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 015.45 2.525c.636-.247 1.363-.416 2.427-.465C8.901 2.013 9.256 2 11.685 2h.63zm-.081 1.802h-.468c-2.456 0-2.784.011-3.807.058-.975.045-1.504.207-1.857.344-.467.182-.8.398-1.15.748-.35.35-.566.683-.748 1.15-.137.353-.3.882-.344 1.857-.047 1.023-.058 1.351-.058 3.807v.468c0 2.456.011 2.784.058 3.807.045.975.207 1.504.344 1.857.182.466.399.8.748 1.15.35.35.683.566 1.15.748.353.137.882.3 1.857.344 1.054.048 1.37.058 4.041.058h.08c2.597 0 2.917-.01 3.96-.058.976-.045 1.505-.207 1.858-.344.466-.182.8-.398 1.15-.748.35-.35.566-.683.748-1.15.137-.353.3-.882.344-1.857.048-1.055.058-1.37.058-4.041v-.08c0-2.597-.01-2.917-.058-3.96-.045-.976-.207-1.505-.344-1.858a3.097 3.097 0 00-.748-1.15 3.098 3.098 0 00-1.15-.748c-.353-.137-.882-.3-1.857-.344-1.023-.047-1.351-.058-3.807-.058zM12 6.865a5.135 5.135 0 110 10.27 5.135 5.135 0 010-10.27zm0 1.802a3.333 3.333 0 100 6.666 3.333 3.333 0 000-6.666zm5.338-3.205a1.2 1.2 0 110 2.4 1.2 1.2 0 010-2.4z" />
                </svg>
              </div>
              <div>
                <h3 class="font-display font-bold text-evolea-purple">Instagram</h3>
                <a href={instagram} target="_blank" rel="noopener noreferrer" class="text-evolea-text-light hover:text-evolea-purple transition-colors">
                  {instagramHandle}
                </a>
              </div>
            </div>
          </div>

          <!-- Free Consultation -->
          <div class="mt-8 p-6 bg-evolea-cream/50 rounded-evolea-lg">
            <h3 class="font-display font-bold text-evolea-purple mb-2">{getText(contact?.erstgespraech?.titel, "Free Initial Consultation")}</h3>
            <p class="text-evolea-text-light text-sm">
              {getText(contact?.erstgespraech?.text, "Would you like to learn more about our programs? Schedule a no-obligation consultation - by phone or in person.")}
            </p>
          </div>
        </div>

        <!-- Contact Form -->
        <div class="bg-white rounded-evolea-lg p-8 shadow-card">
          <h2 class="text-2xl font-display font-bold text-evolea-purple mb-6">{getText(contact?.formular?.titel, "Send Inquiry")}</h2>
          <form action={`https://formspree.io/f/${formspreeId}`} method="POST" class="space-y-6">
            <div>
              <label for="name" class="block text-sm font-medium text-evolea-text mb-2">Name *</label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-3 rounded-evolea border border-evolea-purple/20 focus:border-evolea-purple focus:ring-2 focus:ring-evolea-purple/20 outline-none transition-colors"
                placeholder="Your name"
              />
            </div>
            <div>
              <label for="email" class="block text-sm font-medium text-evolea-text mb-2">Email *</label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 rounded-evolea border border-evolea-purple/20 focus:border-evolea-purple focus:ring-2 focus:ring-evolea-purple/20 outline-none transition-colors"
                placeholder="your@email.com"
              />
            </div>
            <div>
              <label for="phone" class="block text-sm font-medium text-evolea-text mb-2">Phone (optional)</label>
              <input
                type="tel"
                id="phone"
                name="phone"
                class="w-full px-4 py-3 rounded-evolea border border-evolea-purple/20 focus:border-evolea-purple focus:ring-2 focus:ring-evolea-purple/20 outline-none transition-colors"
                placeholder="+41 ..."
              />
            </div>
            <div>
              <label for="subject" class="block text-sm font-medium text-evolea-text mb-2">Subject</label>
              <select
                id="subject"
                name="subject"
                class="w-full px-4 py-3 rounded-evolea border border-evolea-purple/20 focus:border-evolea-purple focus:ring-2 focus:ring-evolea-purple/20 outline-none transition-colors bg-white"
              >
                <option value="">Please select...</option>
                {betreffs.length > 0 ? (
                  betreffs.map((betreff: any) => (
                    <option value={betreff.value}>{getText(betreff.label, betreff.value)}</option>
                  ))
                ) : (
                  <>
                    <option value="mini-garten">Mini Garten</option>
                    <option value="mini-projekte">Mini Projekte</option>
                    <option value="mini-turnen">Mini Turnen</option>
                    <option value="tagesschule">Day School</option>
                    <option value="allgemein">General Inquiry</option>
                  </>
                )}
              </select>
            </div>
            <div>
              <label for="message" class="block text-sm font-medium text-evolea-text mb-2">Message *</label>
              <textarea
                id="message"
                name="message"
                rows="5"
                required
                class="w-full px-4 py-3 rounded-evolea border border-evolea-purple/20 focus:border-evolea-purple focus:ring-2 focus:ring-evolea-purple/20 outline-none transition-colors resize-none"
                placeholder="Your message..."
              ></textarea>
            </div>
            <button type="submit" class="btn-primary w-full justify-center">
              Send Message
              <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
              </svg>
            </button>
          </form>
        </div>
      </div>
    </div>
  </section>

</Base>
