---
import Base from '@layouts/Base.astro';
import { getLangFromUrl, useTranslations, useTranslatedPath } from '@i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);
---

<Base title="Contact" description="Contact EVOLEA - we look forward to hearing from you.">
  <section class="py-20 px-4">
    <div class="container mx-auto max-w-4xl">
      <h1 class="text-4xl md:text-5xl font-bold text-evolea-purple mb-6 text-center">
        {t('nav.contact')}
      </h1>
      <p class="text-xl text-evolea-text-light text-center max-w-2xl mx-auto mb-16">
        {t('contact.cta')}
      </p>
      
      <div class="grid md:grid-cols-2 gap-12">
        <div>
          <h2 class="text-2xl font-semibold text-evolea-purple mb-6">Contact Details</h2>
          <div class="space-y-4 text-evolea-text-light">
            <p>
              <strong class="block text-evolea-text">Email</strong>
              <a href="mailto:hello@evolea.ch" class="hover:text-evolea-purple transition-colors">
                hello@evolea.ch
              </a>
            </p>
            <p>
              <strong class="block text-evolea-text">Location</strong>
              Zurich, Switzerland
            </p>
            <p>
              <strong class="block text-evolea-text">Instagram</strong>
              <a href="https://www.instagram.com/evolea.verein/" target="_blank" rel="noopener noreferrer" class="hover:text-evolea-purple transition-colors">
                @evolea.verein
              </a>
            </p>
          </div>
        </div>
        
        <div class="bg-white rounded-evolea-lg p-8 shadow-sm">
          <h2 class="text-2xl font-semibold text-evolea-purple mb-6">Send a Message</h2>
          <form action="https://formspree.io/f/your-form-id" method="POST" class="space-y-6">
            <div>
              <label for="name" class="block text-sm font-medium text-evolea-text mb-2">Name</label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-3 rounded-evolea-sm border border-evolea-purple/20 focus:border-evolea-purple focus:ring-2 focus:ring-evolea-purple/20 outline-none transition-colors"
              />
            </div>
            <div>
              <label for="email" class="block text-sm font-medium text-evolea-text mb-2">Email</label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 rounded-evolea-sm border border-evolea-purple/20 focus:border-evolea-purple focus:ring-2 focus:ring-evolea-purple/20 outline-none transition-colors"
              />
            </div>
            <div>
              <label for="message" class="block text-sm font-medium text-evolea-text mb-2">Message</label>
              <textarea
                id="message"
                name="message"
                rows="4"
                required
                class="w-full px-4 py-3 rounded-evolea-sm border border-evolea-purple/20 focus:border-evolea-purple focus:ring-2 focus:ring-evolea-purple/20 outline-none transition-colors resize-none"
              ></textarea>
            </div>
            <button type="submit" class="btn-primary w-full">
              Send Message
            </button>
          </form>
        </div>
      </div>
    </div>
  </section>
</Base>
