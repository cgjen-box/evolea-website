---
import Base from '@layouts/Base.astro';
import VideoHero from '@components/VideoHero.astro';
import ProgramCardEnhanced from '@components/ProgramCardEnhanced.astro';
import ValuePillar from '@components/ValuePillar.astro';
import GradientCTA from '@components/GradientCTA.astro';
import FloatingShapes from '@components/FloatingShapes.astro';
import { getLangFromUrl, useTranslations, useTranslatedPath } from '@i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);
---

<Base
  title="Home"
  description="EVOLEA Verein - Educational programs for children on the autism spectrum or with ADHD in ZÃ¼rich. Mini Garden, Mini Projects, Mini Sports and School Consultation."
  transparentHeader={true}
>
  <!-- Hero Section with Video Background -->
  <VideoHero
    title={t('hero.title')}
    subtitle={t('hero.subtitle')}
    videoSrc="/videos/hero.mp4"
    posterSrc="/images/hero-poster.jpg"
    primaryButtonText={t('hero.cta.primary')}
    primaryButtonHref={translatePath('/angebote/')}
    secondaryButtonText={t('hero.cta.secondary')}
    secondaryButtonHref={translatePath('/kontakt/')}
  />

  <!-- About / Mission Section -->
  <section class="section-padding relative overflow-hidden">
    <FloatingShapes variant="section" />

    <div class="container mx-auto max-w-6xl relative z-10">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <!-- Text content -->
        <div class="reveal">
          <span class="section-label">{t('about.title')}</span>
          <h2 class="text-3xl md:text-4xl lg:text-5xl font-display font-bold text-evolea-magenta mb-6 leading-tight">
            <span class="doodle-underline">{t('about.subtitle')}</span>
          </h2>
          <p class="text-lg text-evolea-text-light leading-relaxed mb-8">
            {t('about.description')}
          </p>
          <a href={translatePath('/ueber-uns/')} class="btn-primary">
            {t('about.cta')}
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>

        <!-- Visual element / Stats - TRUE evolea.ch spectrum -->
        <div class="reveal reveal-delay-2">
          <div class="grid grid-cols-2 gap-4">
            <div class="bg-white rounded-evolea-lg p-6 shadow-soft text-center">
              <div class="text-4xl font-display font-bold text-evolea-coral mb-2">4+</div>
              <div class="text-sm text-evolea-text-light">Programs</div>
            </div>
            <div class="bg-white rounded-evolea-lg p-6 shadow-soft text-center">
              <div class="text-4xl font-display font-bold text-evolea-mint mb-2">3-8</div>
              <div class="text-sm text-evolea-text-light">Years</div>
            </div>
            <div class="bg-white rounded-evolea-lg p-6 shadow-soft text-center">
              <div class="text-4xl font-display font-bold text-evolea-purple-light mb-2">ZH</div>
              <div class="text-sm text-evolea-text-light">ZÃ¼rich</div>
            </div>
            <div class="rounded-evolea-lg p-6 text-center text-evolea-purple" style="background: var(--gradient-prism);">
              <div class="text-4xl font-display font-bold mb-2">100%</div>
              <div class="text-sm text-evolea-purple/80">Individualized</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Programs Section -->
  <section class="section-padding bg-white relative">
    <div class="container mx-auto max-w-6xl">
      <div class="section-header reveal">
        <span class="section-label">{t('nav.programs')}</span>
        <h2>{t('programs.title')}</h2>
        <p>{t('programs.subtitle')}</p>
      </div>

      <!-- Bento Grid - TRUE evolea.ch spectrum colors -->
      <div class="bento-grid">
        <div class="reveal reveal-delay-1">
          <ProgramCardEnhanced
            title={t('programs.miniGarten')}
            description={t('programs.miniGarten.desc')}
            href={translatePath('/angebote/mini-garten/')}
            icon="ðŸŒ±"
            imageSrc="/images/programs/garden.jpg"
            imageAlt="Children learning through play in the garden"
            colorAccent="mint"
          />
        </div>
        <div class="reveal reveal-delay-2 bento-item-large">
          <ProgramCardEnhanced
            title={t('programs.miniProjekte')}
            description={t('programs.miniProjekte.desc')}
            href={translatePath('/angebote/mini-projekte/')}
            icon="ðŸŽ¨"
            imageSrc="/images/programs/projects.jpg"
            imageAlt="Children engaged in creative projects"
            colorAccent="coral"
            size="large"
          />
        </div>
        <div class="reveal reveal-delay-3">
          <ProgramCardEnhanced
            title={t('programs.miniTurnen')}
            description={t('programs.miniTurnen.desc')}
            href={translatePath('/angebote/mini-turnen/')}
            icon="âš½"
            imageSrc="/images/programs/sports.png"
            imageAlt="Children doing sports and gymnastics"
            colorAccent="sky"
          />
        </div>
        <div class="reveal reveal-delay-4 bento-item-wide">
          <ProgramCardEnhanced
            title={t('programs.schulberatung')}
            description={t('programs.schulberatung.desc')}
            href={translatePath('/angebote/schulberatung/')}
            icon="ðŸ«"
            imageSrc="/images/programs/school.jpg"
            imageAlt="School consultation and support"
            colorAccent="magenta"
            size="wide"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Values Section -->
  <section class="section-padding relative overflow-hidden">
    <FloatingShapes variant="minimal" />

    <div class="container mx-auto max-w-6xl relative z-10">
      <div class="section-header reveal">
        <span class="section-label">{t('values.title')}</span>
        <h2>{t('values.title')}</h2>
      </div>

      <div class="grid md:grid-cols-3 gap-6">
        <div class="reveal reveal-delay-1">
          <ValuePillar
            title={t('values.safety.title')}
            description={t('values.safety.desc')}
            icon="ðŸ›¡ï¸"
            color="magenta"
          />
        </div>
        <div class="reveal reveal-delay-2">
          <ValuePillar
            title={t('values.empower.title')}
            description={t('values.empower.desc')}
            icon="ðŸ’ª"
            color="coral"
          />
        </div>
        <div class="reveal reveal-delay-3">
          <ValuePillar
            title={t('values.potential.title')}
            description={t('values.potential.desc')}
            icon="âœ¨"
            color="mint"
          />
        </div>
      </div>
    </div>

    <!-- Spectrum line decoration -->
    <div class="container mx-auto max-w-4xl mt-16">
      <div class="spectrum-line reveal"></div>
    </div>
  </section>

  <!-- Team Preview Section -->
  <section class="section-padding bg-white relative">
    <div class="container mx-auto max-w-4xl text-center">
      <div class="reveal">
        <span class="section-label">{t('nav.team')}</span>
        <h2 class="text-3xl md:text-4xl lg:text-5xl font-display font-bold text-evolea-magenta mb-6">
          {t('team.title')}
        </h2>
        <p class="text-lg text-evolea-text-light mb-8 max-w-2xl mx-auto">
          {t('team.description')}
        </p>
        <a href={translatePath('/team/')} class="btn-secondary">
          {t('team.cta')}
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <GradientCTA
    title={t('contact.title')}
    description={t('contact.subtitle')}
    buttonText={t('contact.cta')}
    buttonHref={translatePath('/kontakt/')}
    variant="hero"
  />
</Base>
