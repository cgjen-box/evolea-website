---
interface Props {
  variant?: 'hero' | 'section' | 'minimal';
  class?: string;
}

const { variant = 'section', class: className = '' } = Astro.props;
---

{variant === 'hero' && (
  <div class:list={['floating-shapes-container', className]} aria-hidden="true">
    <!-- Large background blobs -->
    <div class="floating-shape floating-shape-purple w-96 h-96 -top-48 -right-48 animate-float-slow opacity-30"></div>
    <div class="floating-shape floating-shape-orange w-64 h-64 top-1/4 -left-32 animate-float opacity-40"></div>
    <div class="floating-shape floating-shape-green w-48 h-48 bottom-1/4 right-1/4 animate-float-delayed opacity-30"></div>
    <div class="floating-shape floating-shape-yellow w-32 h-32 bottom-1/3 left-1/4 animate-float-slow opacity-40"></div>
    <div class="floating-shape floating-shape-sky w-40 h-40 top-1/3 right-1/3 animate-float opacity-30"></div>

    <!-- Small accent circles -->
    <div class="floating-shape floating-shape-coral w-8 h-8 top-1/4 right-1/4 animate-pulse-soft"></div>
    <div class="floating-shape floating-shape-yellow w-6 h-6 bottom-1/2 left-1/3 animate-pulse-soft" style="animation-delay: 1s;"></div>
    <div class="floating-shape floating-shape-green w-10 h-10 top-2/3 right-1/5 animate-pulse-soft" style="animation-delay: 2s;"></div>
  </div>
)}

{variant === 'section' && (
  <div class:list={['floating-shapes-container', className]} aria-hidden="true">
    <!-- Medium decorative blobs -->
    <div class="floating-shape floating-shape-purple w-64 h-64 -top-32 -right-32 animate-float-slow opacity-20"></div>
    <div class="floating-shape floating-shape-orange w-48 h-48 -bottom-24 -left-24 animate-float opacity-25"></div>
    <div class="floating-shape floating-shape-green w-32 h-32 top-1/2 -right-16 animate-float-delayed opacity-20"></div>

    <!-- Accent circles -->
    <div class="floating-shape floating-shape-yellow w-6 h-6 top-1/4 left-1/4 animate-pulse-soft opacity-60"></div>
    <div class="floating-shape floating-shape-coral w-4 h-4 bottom-1/3 right-1/3 animate-pulse-soft opacity-60" style="animation-delay: 1.5s;"></div>
  </div>
)}

{variant === 'minimal' && (
  <div class:list={['floating-shapes-container', className]} aria-hidden="true">
    <!-- Subtle accent shapes -->
    <div class="floating-shape floating-shape-purple w-32 h-32 -top-16 -right-16 animate-float-slow opacity-15"></div>
    <div class="floating-shape floating-shape-orange w-24 h-24 -bottom-12 -left-12 animate-float opacity-15"></div>
  </div>
)}

<style>
  .floating-shapes-container {
    @apply absolute inset-0 overflow-hidden pointer-events-none;
    z-index: 1;
  }

  /* Floating shape positioning helpers */
  .floating-shape {
    @apply absolute rounded-full;
    will-change: transform;
  }

  /* Position utilities for shapes */
  .right-1\/5 {
    right: 20%;
  }

  /* Blur effect for larger shapes */
  .floating-shape.w-96,
  .floating-shape.w-64,
  .floating-shape.w-48 {
    filter: blur(40px);
  }

  .floating-shape.w-40,
  .floating-shape.w-32 {
    filter: blur(20px);
  }

  .floating-shape.w-24,
  .floating-shape.w-16 {
    filter: blur(10px);
  }

  /* Small accent shapes have less blur */
  .floating-shape.w-10,
  .floating-shape.w-8,
  .floating-shape.w-6,
  .floating-shape.w-4 {
    filter: blur(2px);
  }

  /* Reduce motion: disable animations */
  @media (prefers-reduced-motion: reduce) {
    .floating-shape {
      animation: none !important;
    }
  }
</style>
