---
import { getLangFromUrl, useTranslations, useTranslatedPath } from '@i18n/utils';
import LanguagePicker from './LanguagePicker.astro';
import Butterfly from './Butterfly.astro';

interface Props {
  transparent?: boolean;
  siteSettings?: {
    navigation?: {
      de?: {
        home?: string;
        programs?: string;
        about?: string;
        team?: string;
        blog?: string;
        contact?: string;
      };
      en?: {
        home?: string;
        programs?: string;
        about?: string;
        team?: string;
        blog?: string;
        contact?: string;
      };
    };
  };
}

const { transparent = false, siteSettings } = Astro.props;

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);

const navLabels = siteSettings?.navigation?.[lang] || {};
const navLabelMap: Record<string, string | undefined> = {
  'nav.programs': navLabels.programs,
  'nav.about': navLabels.about,
  'nav.team': navLabels.team,
  'nav.blog': navLabels.blog,
  'nav.contact': navLabels.contact,
};

const navItems = [
  { key: 'nav.programs', href: '/angebote/' },
  { key: 'nav.about', href: '/ueber-uns/' },
  { key: 'nav.team', href: '/team/' },
  { key: 'nav.blog', href: '/blog/' },
  { key: 'nav.contact', href: '/kontakt/' },
] as const;

// Get donate path based on language
const donatePath = lang === 'de' ? '/spenden/' : '/en/donate/';
---

<!-- Desktop Header -->
<header
  id="main-header"
  class:list={[
    'fixed top-0 left-0 right-0 z-50 transition-all duration-300',
    transparent ? 'bg-transparent' : 'bg-evolea-cream/95 backdrop-blur-md shadow-soft',
  ]}
  data-transparent={transparent}
>
  <nav class="container mx-auto px-4 py-4 flex items-center justify-between">
    <!-- Logo -->
    <a
      href={translatePath('/')}
      class:list={[
        'flex items-center gap-2 font-display font-bold text-xl transition-colors',
        transparent ? 'text-white' : 'text-evolea-purple',
      ]}
    >
      <span class="logo-text">EVOLEA</span>
      <span class="butterfly-wrapper">
        <span class="butterfly-default">
          <Butterfly size="sm" variant={transparent ? 'white' : 'spectrum'} />
        </span>
        {transparent && (
          <span class="butterfly-scrolled">
            <Butterfly size="sm" variant="spectrum" />
          </span>
        )}
      </span>
    </a>

    <!-- Desktop Navigation -->
    <div class="hidden md:flex items-center gap-6">
      {navItems.map(({ key, href }) => {
        const isActive = Astro.url.pathname.startsWith(translatePath(href));
        return (
          <a
            href={translatePath(href)}
            class:list={[
              'nav-link relative font-medium transition-colors py-2',
              transparent ? 'text-white/90 hover:text-white' : 'text-evolea-text hover:text-evolea-magenta',
              isActive && !transparent && 'nav-link-active text-evolea-magenta',
              isActive && transparent && 'nav-link-active-light',
            ]}
          >
            {navLabelMap[key] || t(key)}
          </a>
        );
      })}
      <LanguagePicker />
      <a
        href={translatePath(donatePath)}
        class="nav-donate"
      >
        {t('nav.donate')}
      </a>
    </div>

    <!-- Mobile Menu Button -->
    <button
      type="button"
      id="mobile-menu-btn"
      class:list={[
        'md:hidden p-2 rounded-lg transition-colors',
        transparent ? 'text-white hover:bg-white/10' : 'text-evolea-purple hover:bg-evolea-purple/10',
      ]}
      aria-expanded="false"
      aria-label={lang === 'de' ? 'Menü öffnen' : 'Open menu'}
    >
      <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
  </nav>
</header>

<!-- Mobile Menu Overlay - COMPLETELY SEPARATE FROM HEADER -->
<div
  id="mobile-menu-overlay"
  class="mobile-menu-overlay"
  aria-hidden="true"
>
  <!-- Solid Background - This is the key fix -->
  <div class="mobile-menu-bg"></div>

  <!-- Content -->
  <div class="mobile-menu-content">
    <!-- Close Button -->
    <button
      type="button"
      id="mobile-menu-close"
      class="absolute top-6 right-6 p-3 rounded-full bg-white/20 text-white hover:bg-white/30 transition-colors z-10"
      aria-label={lang === 'de' ? 'Menü schließen' : 'Close menu'}
    >
      <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>

    <!-- Logo -->
    <a href={translatePath('/')} class="flex items-center gap-3 mb-12">
      <span class="font-display font-bold text-3xl text-white">EVOLEA</span>
      <Butterfly size="md" variant="white" />
    </a>

    <!-- Navigation Links -->
    <nav class="flex flex-col gap-2 mb-auto">
      {navItems.map(({ key, href }, index) => (
        <a
          href={translatePath(href)}
          class="mobile-nav-link py-4 text-2xl sm:text-3xl font-display font-bold text-white/90 hover:text-white transition-colors"
          style={`animation-delay: ${index * 0.05}s`}
        >
          {navLabelMap[key] || t(key)}
        </a>
      ))}
    </nav>

    <!-- Footer -->
    <div class="mt-auto pt-8 border-t border-white/20">
      <div class="flex items-center justify-between mb-6">
        <span class="text-white/70 text-sm">{lang === 'de' ? 'Sprache' : 'Language'}</span>
        <LanguagePicker />
      </div>
      <div class="flex flex-col gap-3">
        <a
          href={translatePath(donatePath)}
          class="flex items-center justify-center gap-3 w-full py-4 px-8 font-display font-bold text-lg rounded-full shadow-lg hover:shadow-xl transition-all"
          style="background: #E8B86D; color: #5C2854;"
        >
          {t('nav.donate')}
        </a>
        <a
          href={translatePath('/kontakt/')}
          class="flex items-center justify-center gap-3 w-full py-4 px-8 bg-white text-evolea-purple font-display font-bold text-lg rounded-full shadow-lg hover:shadow-xl transition-all"
        >
          {t('contact.cta')}
        </a>
      </div>
    </div>
  </div>
</div>

<style>
  /* Logo gradient text */
  .logo-text {
    background: linear-gradient(90deg, #7BEDD5 0%, #FFE066 25%, #FF7E5D 50%, #E97BF1 75%, #CD87F8 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  [data-transparent="true"] .logo-text {
    background: white;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  /* Butterfly toggle for scrolled state */
  .butterfly-wrapper {
    position: relative;
    display: inline-flex;
  }

  .butterfly-scrolled {
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .butterfly-default {
    transition: opacity 0.3s ease;
  }

  :global(#main-header.header-scrolled) .butterfly-scrolled {
    opacity: 1;
  }

  :global(#main-header.header-scrolled) .butterfly-default {
    opacity: 0;
  }

  /* Nav link with spectrum underline on active - per Brand Guide v3 */
  .nav-link-active::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 50%;
    transform: translateX(-50%);
    width: 100%;
    height: 3px;
    background: linear-gradient(90deg, #7BEDD5, #FFE066, #FF7E5D, #E97BF1, #CD87F8);
    border-radius: 2px;
  }

  .nav-link-active-light::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 50%;
    transform: translateX(-50%);
    width: 100%;
    height: 3px;
    background: white;
    border-radius: 2px;
  }

  /* Donate button in nav - Gold color per user request */
  .nav-donate {
    background: #E8B86D;
    color: #5C2854;
    padding: 0.6rem 1.25rem;
    border-radius: 100px;
    font-weight: 600;
    font-size: 0.9rem;
    box-shadow: 0 2px 10px rgba(232, 184, 109, 0.3);
    transition: all 0.3s ease;
  }

  .nav-donate:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 20px rgba(232, 184, 109, 0.4);
    background: #D4A056;
  }

  [data-transparent="true"] .nav-donate {
    background: #E8B86D;
    color: #5C2854;
  }

  /* Header hide on scroll down, show on scroll up */
  :global(#main-header.header-hidden) {
    transform: translateY(-100%);
  }

  /* ===== SCROLLED STATE - Frosted Glass with Prism Accent ===== */
  :global(#main-header.header-scrolled) {
    background: rgba(255, 251, 247, 0.92);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    box-shadow:
      0 4px 30px rgba(138, 61, 126, 0.08),
      0 1px 3px rgba(0, 0, 0, 0.05);
  }

  /* Prism gradient line at bottom of scrolled header */
  :global(#main-header.header-scrolled)::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: linear-gradient(
      90deg,
      #7BEDD5 0%,
      #FFE066 20%,
      #FF7E5D 40%,
      #E97BF1 60%,
      #CD87F8 80%,
      #7BEDD5 100%
    );
    background-size: 200% 100%;
    animation: prismSlide 8s linear infinite;
    opacity: 0.8;
  }

  @keyframes prismSlide {
    0% { background-position: 0% 50%; }
    100% { background-position: 200% 50%; }
  }

  /* Override transparent styles when scrolled */
  :global(#main-header.header-scrolled) .logo-text {
    background: linear-gradient(90deg, #7BEDD5 0%, #FFE066 25%, #FF7E5D 50%, #E97BF1 75%, #CD87F8 100%) !important;
    -webkit-background-clip: text !important;
    -webkit-text-fill-color: transparent !important;
    background-clip: text !important;
  }

  :global(#main-header.header-scrolled) .nav-link {
    color: #5C5762 !important;
  }

  :global(#main-header.header-scrolled) .nav-link:hover {
    color: #DD48E0 !important;
  }

  :global(#main-header.header-scrolled) .nav-link-active-light::after {
    background: linear-gradient(90deg, #7BEDD5, #FFE066, #FF7E5D, #E97BF1, #CD87F8) !important;
  }

  :global(#main-header.header-scrolled) #mobile-menu-btn {
    color: #BA53AD !important;
  }

  :global(#main-header.header-scrolled) #mobile-menu-btn:hover {
    background: rgba(186, 83, 173, 0.1) !important;
  }

  /* Reduced motion - disable prism animation */
  @media (prefers-reduced-motion: reduce) {
    :global(#main-header.header-scrolled)::after {
      animation: none;
      background-position: 50% 50%;
    }
  }

  /* ============================================
     MOBILE MENU - BULLETPROOF IMPLEMENTATION
     ============================================ */

  .mobile-menu-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100vw;
    height: 100vh;
    height: 100dvh;
    z-index: 999999;

    /* HIDDEN by default */
    visibility: hidden;
    opacity: 0;
    pointer-events: none;

    /* Slide from right */
    transform: translateX(100%);
    transition: transform 0.4s cubic-bezier(0.16, 1, 0.3, 1),
                opacity 0.3s ease,
                visibility 0.3s ease;
  }

  .mobile-menu-overlay.open {
    visibility: visible;
    opacity: 1;
    pointer-events: auto;
    transform: translateX(0);
  }

  /* SOLID BACKGROUND - NO TRANSPARENCY */
  .mobile-menu-bg {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100%;

    /* SOLID gradient - this is the key */
    background: linear-gradient(
      135deg,
      #BA53AD 0%,
      #DD48E0 25%,
      #CD87F8 50%,
      #7BEDD5 75%,
      #5DADE2 100%
    );
    background-size: 400% 400%;
    animation: gradientShift 15s ease infinite;
  }

  @keyframes gradientShift {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  .mobile-menu-content {
    position: relative;
    z-index: 1;
    height: 100%;
    display: flex;
    flex-direction: column;
    padding: 6rem 2rem 2rem;
    overflow-y: auto;
    -webkit-overflow-scrolling: touch;
  }

  /* Nav link animations */
  .mobile-nav-link {
    opacity: 0;
    transform: translateX(20px);
    transition: opacity 0.3s ease, transform 0.3s ease, color 0.2s ease;
  }

  .mobile-menu-overlay.open .mobile-nav-link {
    opacity: 1;
    transform: translateX(0);
  }

  /* Body lock when menu is open */
  :global(body.menu-open) {
    overflow: hidden !important;
    position: fixed !important;
    width: 100% !important;
    height: 100% !important;
    touch-action: none !important;
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .mobile-menu-overlay {
      transition: opacity 0.1s ease, visibility 0.1s ease;
      transform: none !important;
    }

    .mobile-menu-bg {
      animation: none;
    }

    .mobile-nav-link {
      opacity: 1;
      transform: none;
      transition: color 0.2s ease;
    }
  }
</style>

<script>
  function initMobileMenu() {
    const menuBtn = document.getElementById('mobile-menu-btn');
    const menuClose = document.getElementById('mobile-menu-close');
    const menuOverlay = document.getElementById('mobile-menu-overlay');

    if (!menuBtn || !menuOverlay) return;

    const openMenu = () => {
      menuOverlay.classList.add('open');
      menuOverlay.setAttribute('aria-hidden', 'false');
      menuBtn.setAttribute('aria-expanded', 'true');
      document.body.classList.add('menu-open');
    };

    const closeMenu = () => {
      menuOverlay.classList.remove('open');
      menuOverlay.setAttribute('aria-hidden', 'true');
      menuBtn.setAttribute('aria-expanded', 'false');
      document.body.classList.remove('menu-open');
    };

    // Open menu
    menuBtn.addEventListener('click', openMenu);

    // Close menu - close button
    menuClose?.addEventListener('click', closeMenu);

    // Close menu - clicking links
    menuOverlay.querySelectorAll('a').forEach(link => {
      link.addEventListener('click', closeMenu);
    });

    // Close menu - escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && menuOverlay.classList.contains('open')) {
        closeMenu();
      }
    });

    // Close menu - clicking outside content (on the background)
    menuOverlay.addEventListener('click', (e) => {
      if (e.target === menuOverlay) {
        closeMenu();
      }
    });
  }

  // Scroll hide/show header with frosted glass effect
  function initScrollHeader() {
    const header = document.getElementById('main-header');
    if (!header) return;

    let lastScrollY = window.scrollY;
    let ticking = false;

    const updateHeader = () => {
      const currentScrollY = window.scrollY;

      // Don't hide header when mobile menu is open
      if (document.body.classList.contains('menu-open')) {
        ticking = false;
        return;
      }

      // Only hide after scrolling past the header height
      if (currentScrollY > 80) {
        if (currentScrollY > lastScrollY) {
          // Scrolling down - hide header
          header.classList.add('header-hidden');
        } else {
          // Scrolling up - show header with frosted glass effect
          header.classList.remove('header-hidden');
          header.classList.add('header-scrolled');
        }
      } else {
        // At top of page - always show header, remove scrolled state
        header.classList.remove('header-hidden');
        header.classList.remove('header-scrolled');
      }

      lastScrollY = currentScrollY;
      ticking = false;
    };

    window.addEventListener('scroll', () => {
      if (!ticking) {
        window.requestAnimationFrame(updateHeader);
        ticking = true;
      }
    }, { passive: true });
  }

  // Initialize
  document.addEventListener('DOMContentLoaded', () => {
    initMobileMenu();
    initScrollHeader();
  });
  document.addEventListener('astro:page-load', () => {
    initMobileMenu();
    initScrollHeader();
  });
</script>
