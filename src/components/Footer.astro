---
import { getLangFromUrl, useTranslations, useTranslatedPath } from '@i18n/utils';
import Butterfly from './Butterfly.astro';

interface Props {
  siteSettings?: {
    footer?: {
      tagline?: { de?: string; en?: string };
      copyright?: string;
      datenschutzText?: { de?: string; en?: string };
      impressumText?: { de?: string; en?: string };
    };
    kontakt?: {
      email?: string;
    };
    social?: {
      instagram?: string;
    };
  };
}

const { siteSettings } = Astro.props;

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);

const getText = (obj: { de?: string; en?: string } | undefined, fallback: string) => {
  if (!obj) return fallback;
  return lang === 'de' ? (obj.de || fallback) : (obj.en || obj.de || fallback);
};

const footerTagline = getText(siteSettings?.footer?.tagline, t('footer.tagline'));
const footerPrivacy = getText(siteSettings?.footer?.datenschutzText, t('footer.privacy'));
const footerImpressum = getText(siteSettings?.footer?.impressumText, t('footer.imprint'));
const footerCopyright =
  lang === 'de'
    ? siteSettings?.footer?.copyright || t('footer.copyright')
    : t('footer.copyright');
const email = siteSettings?.kontakt?.email || t('contact.email');
const instagramUrl = siteSettings?.social?.instagram || 'https://www.instagram.com/evolea.verein/';
---

<footer class="relative text-white overflow-hidden footer-gradient">
  <!-- No wave needed - seamless gradient connection from CTA -->

  <!-- Floating decorative elements -->
  <div class="absolute inset-0 pointer-events-none overflow-hidden" aria-hidden="true">
    <div class="absolute top-24 left-10 w-32 h-32 rounded-full bg-white/5 blur-2xl animate-float-slow"></div>
    <div class="absolute bottom-32 right-20 w-48 h-48 rounded-full bg-evolea-orange/10 blur-3xl animate-float"></div>
    <div class="absolute top-1/2 left-1/3 w-24 h-24 rounded-full bg-evolea-green/10 blur-xl animate-float-delayed"></div>

    <!-- Floating butterflies -->
    <div class="absolute top-32 right-1/4 opacity-30 animate-float">
      <Butterfly size="lg" variant="white" animated />
    </div>
    <div class="absolute bottom-1/3 left-1/4 opacity-20 animate-float-delayed">
      <Butterfly size="md" variant="white" animated />
    </div>
  </div>

  <!-- Main footer content -->
  <div class="relative pt-12 pb-8">
    <div class="container mx-auto px-4">
      <!-- Top section with branding and links -->
      <div class="grid md:grid-cols-4 gap-12 mb-16">
        <!-- Brand column -->
        <div class="md:col-span-2">
          <a href={translatePath('/')} class="inline-flex items-center gap-2 font-display font-bold text-2xl mb-4 group">
            <span>EVOLEA</span>
            <span class="opacity-80 group-hover:opacity-100 transition-opacity" style="transform: rotate(-15deg);">
              <Butterfly size="sm" variant="white" />
            </span>
          </a>
          <p class="text-white/80 max-w-md leading-relaxed mb-6">
            {footerTagline}
          </p>

          <!-- Spectrum line decoration -->
          <div class="w-32 h-1 rounded-full bg-gradient-spectrum mb-6"></div>

          <!-- Social links -->
          <div class="flex gap-4">
            <a
              href={instagramUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="w-10 h-10 rounded-full bg-white/10 flex items-center justify-center hover:bg-white/20 transition-colors"
              aria-label="Instagram"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path fill-rule="evenodd" d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 015.45 2.525c.636-.247 1.363-.416 2.427-.465C8.901 2.013 9.256 2 11.685 2h.63zm-.081 1.802h-.468c-2.456 0-2.784.011-3.807.058-.975.045-1.504.207-1.857.344-.467.182-.8.398-1.15.748-.35.35-.566.683-.748 1.15-.137.353-.3.882-.344 1.857-.047 1.023-.058 1.351-.058 3.807v.468c0 2.456.011 2.784.058 3.807.045.975.207 1.504.344 1.857.182.466.399.8.748 1.15.35.35.683.566 1.15.748.353.137.882.3 1.857.344 1.054.048 1.37.058 4.041.058h.08c2.597 0 2.917-.01 3.96-.058.976-.045 1.505-.207 1.858-.344.466-.182.8-.398 1.15-.748.35-.35.566-.683.748-1.15.137-.353.3-.882.344-1.857.048-1.055.058-1.37.058-4.041v-.08c0-2.597-.01-2.917-.058-3.96-.045-.976-.207-1.505-.344-1.858a3.097 3.097 0 00-.748-1.15 3.098 3.098 0 00-1.15-.748c-.353-.137-.882-.3-1.857-.344-1.023-.047-1.351-.058-3.807-.058zM12 6.865a5.135 5.135 0 110 10.27 5.135 5.135 0 010-10.27zm0 1.802a3.333 3.333 0 100 6.666 3.333 3.333 0 000-6.666zm5.338-3.205a1.2 1.2 0 110 2.4 1.2 1.2 0 010-2.4z" clip-rule="evenodd" />
              </svg>
            </a>
            <a
              href={`mailto:${email}`}
              class="w-10 h-10 rounded-full bg-white/10 flex items-center justify-center hover:bg-white/20 transition-colors"
              aria-label="Email"
            >
              <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </a>
          </div>
        </div>

        <!-- Programs links -->
        <div>
          <h3 class="font-display font-semibold text-lg mb-4">{t('nav.programs')}</h3>
          <ul class="space-y-3">
            <li>
              <a href={translatePath('/angebote/mini-garten/')} class="text-white/70 hover:text-white transition-colors">
                {t('programs.miniGarten')}
              </a>
            </li>
            <li>
              <a href={translatePath('/angebote/mini-projekte/')} class="text-white/70 hover:text-white transition-colors">
                {t('programs.miniProjekte')}
              </a>
            </li>
            <li>
              <a href={translatePath('/angebote/mini-turnen/')} class="text-white/70 hover:text-white transition-colors">
                {t('programs.miniTurnen')}
              </a>
            </li>
            <li>
              <a href={translatePath('/angebote/evolea-cafe/')} class="text-white/70 hover:text-white transition-colors">
                EVOLEA Cafe
              </a>
            </li>
          </ul>
        </div>

        <!-- Contact info -->
        <div>
          <h3 class="font-display font-semibold text-lg mb-4">{t('nav.contact')}</h3>
          <ul class="space-y-3">
            <li class="flex items-center gap-2 text-white/70">
              <svg class="w-5 h-5 text-evolea-orange" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              <span>{t('footer.location')}</span>
            </li>
            <li>
              <a href="mailto:hello@evolea.ch" class="flex items-center gap-2 text-white/70 hover:text-white transition-colors">
                <svg class="w-5 h-5 text-evolea-orange" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              <span>{email}</span>
              </a>
            </li>
          </ul>

          <!-- CTA Button -->
          <a
            href={translatePath('/kontakt/')}
            class="inline-flex items-center gap-2 mt-6 px-6 py-3 bg-white text-evolea-purple font-semibold rounded-full hover:bg-evolea-cream transition-colors"
          >
            {t('contact.cta')}
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>
      </div>

      <!-- Bottom section -->
      <div class="pt-8 border-t border-white/10">
        <div class="flex flex-col md:flex-row justify-between items-center gap-4">
          <p class="text-white/60 text-sm">
            {footerCopyright}
          </p>
          <div class="flex gap-6 text-sm">
            <a href={translatePath('/datenschutz/')} class="text-white/60 hover:text-white transition-colors">
              {footerPrivacy}
            </a>
            <a href={translatePath('/impressum/')} class="text-white/60 hover:text-white transition-colors">
              {footerImpressum}
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  /* Footer gradient - connects seamlessly from CTA section */
  .footer-gradient {
    background: linear-gradient(
      180deg,
      #8A3D7E 0%,
      #7A2D6E 30%,
      #5C2854 100%
    );
  }

  /* Spectrum gradient for decorative line */
  .bg-gradient-spectrum {
    background: linear-gradient(90deg, #7BEDD5 0%, #FFE066 25%, #FF7E5D 50%, #E97BF1 75%, #CD87F8 100%);
  }

  /* Reduce motion preferences */
  @media (prefers-reduced-motion: reduce) {
    .animate-float,
    .animate-float-slow,
    .animate-float-delayed {
      animation: none;
    }
  }
</style>
