---
interface Props {
  title: string;
  description: string;
  icon: string;
  color?: 'magenta' | 'purple' | 'mint' | 'coral' | 'pink' | 'yellow' | 'sky' | 'teal' | 'gold';
}

const { title, description, icon, color = 'magenta' } = Astro.props;

// TRUE evolea.ch spectrum colors
const colorClasses = {
  magenta: 'bg-evolea-magenta/15 text-evolea-magenta',
  purple: 'bg-evolea-purple-light/15 text-evolea-purple',
  mint: 'bg-evolea-mint/20 text-evolea-teal',
  coral: 'bg-evolea-coral/15 text-evolea-coral',
  pink: 'bg-evolea-pink/15 text-evolea-pink',
  yellow: 'bg-evolea-yellow/25 text-evolea-coral-dark',
  sky: 'bg-evolea-sky/15 text-evolea-sky',
  teal: 'bg-evolea-teal/15 text-evolea-teal',
  gold: 'bg-evolea-gold/25 text-evolea-coral-dark',
};
---

<article class="value-pillar reveal">
  <div class:list={['value-pillar-icon', colorClasses[color]]}>
    <span aria-hidden="true">{icon}</span>
  </div>
  <h3 class="value-pillar-title">{title}</h3>
  <p class="value-pillar-description">{description}</p>

  <!-- Decorative bottom line - TRUE evolea.ch prism -->
  <div class="mt-6 mx-auto w-12 h-1 rounded-full opacity-80" style="background: var(--gradient-prism);"></div>
</article>

<style>
  .value-pillar {
    position: relative;
    padding: 2rem;
    border-radius: 24px;
    background: white;
    text-align: center;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    box-shadow: 0 4px 20px rgba(186, 83, 173, 0.1);
  }

  .value-pillar:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(186, 83, 173, 0.18);
  }

  .value-pillar-icon {
    width: 4.5rem;
    height: 4.5rem;
    margin: 0 auto 1.25rem;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2rem;
    transition: transform 0.3s ease;
  }

  .value-pillar:hover .value-pillar-icon {
    transform: scale(1.1) rotate(5deg);
  }

  .value-pillar-title {
    font-family: 'Fredoka', 'Poppins', sans-serif;
    font-weight: 600;
    font-size: 1.25rem;
    color: #DD48E0; /* TRUE evolea.ch magenta */
    margin-bottom: 0.75rem;
  }

  .value-pillar-description {
    color: #5C5762;
    font-size: 0.9375rem;
    line-height: 1.6;
  }

  /* Subtle shine effect on hover */
  .value-pillar::before {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: 24px;
    background: linear-gradient(
      135deg,
      transparent 40%,
      rgba(255, 255, 255, 0.4) 50%,
      transparent 60%
    );
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .value-pillar:hover::before {
    opacity: 1;
    animation: shine 0.6s ease forwards;
  }

  @keyframes shine {
    0% {
      background-position: -100% 0;
    }
    100% {
      background-position: 200% 0;
    }
  }
</style>
