---
/**
 * EditLink Component
 * Shows an edit button that links directly to the Keystatic editor.
 * Only visible on the Cloudflare deployment (not GitHub Pages).
 */

interface Props {
  /** Type of content: 'collection' or 'singleton' */
  type: 'collection' | 'singleton';
  /** Collection or singleton name (e.g., 'blog', 'pages', 'siteSettings') */
  collection: string;
  /** Slug for collection items (not needed for singletons) */
  slug?: string;
  /** Optional label for the button */
  label?: string;
  /** Position: 'fixed' stays in corner, 'inline' flows with content */
  position?: 'fixed' | 'inline';
}

const { type, collection, slug, label = 'Edit', position = 'fixed' } = Astro.props;

// Build the Keystatic edit URL
const baseUrl = '/keystatic';
let editUrl: string;

if (type === 'singleton') {
  editUrl = `${baseUrl}/singleton/${collection}`;
} else {
  editUrl = slug
    ? `${baseUrl}/collection/${collection}/item/${slug}`
    : `${baseUrl}/collection/${collection}`;
}

// Check if we're on Cloudflare (not GitHub Pages)
const isCloudflare = !import.meta.env.BASE_URL || import.meta.env.BASE_URL === '/';
---

{isCloudflare && (
  <a
    href={editUrl}
    target="_blank"
    rel="noopener noreferrer"
    class:list={[
      'edit-link',
      `edit-link--${position}`,
    ]}
    title={`${label} in Keystatic`}
  >
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
      <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
    </svg>
    <span>{label}</span>
  </a>
)}

<style>
  .edit-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: linear-gradient(135deg, #DD48E0, #BA53AD);
    color: white;
    font-family: 'Poppins', sans-serif;
    font-size: 0.875rem;
    font-weight: 500;
    text-decoration: none;
    border-radius: 9999px;
    box-shadow: 0 2px 8px rgba(186, 83, 173, 0.3);
    transition: all 0.2s ease;
    z-index: 1000;
  }

  .edit-link:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(186, 83, 173, 0.4);
    background: linear-gradient(135deg, #BA53AD, #DD48E0);
  }

  .edit-link--fixed {
    position: fixed;
    bottom: 1.5rem;
    right: 1.5rem;
  }

  .edit-link--inline {
    position: relative;
  }

  .edit-link svg {
    flex-shrink: 0;
  }

  @media (max-width: 640px) {
    .edit-link--fixed span {
      /* Hide text on mobile, show only icon */
      position: absolute;
      width: 1px;
      height: 1px;
      padding: 0;
      margin: -1px;
      overflow: hidden;
      clip: rect(0, 0, 0, 0);
      border: 0;
    }

    .edit-link--fixed {
      padding: 0.75rem;
    }
  }
</style>
