---
/**
 * ProgramCard - Card component for displaying programs
 * BRAND COMPLIANCE: Uses SVG icons instead of emojis per Brand Guide v3.0
 */
import Icon from './Icon.astro';

interface Props {
  title: string;
  description: string;
  href: string;
  icon?: 'sprout' | 'palette' | 'ball' | 'school' | 'museum' | 'cooking' | 'coffee';
  variant?: 'default' | 'featured';
}

const { title, description, href, icon, variant = 'default' } = Astro.props;
---

<a
  href={href}
  class:list={[
    'group block p-6 rounded-evolea-lg transition-all duration-200',
    'hover:shadow-lg hover:-translate-y-1',
    'focus-visible:ring-2 focus-visible:ring-evolea-purple focus-visible:ring-offset-2',
    {
      'bg-white border border-evolea-purple/10': variant === 'default',
      'bg-evolea-purple text-white': variant === 'featured',
    },
  ]}
>
  {icon && (
    <div class:list={["mb-4", { 'program-icon-white': variant === 'featured' }]} aria-hidden="true">
      <Icon name={icon} size="xl" gradient={variant === 'default'} />
    </div>
  )}
  <h3 class:list={[
    'text-xl font-semibold mb-2 group-hover:underline',
    {
      'text-evolea-purple': variant === 'default',
      'text-white': variant === 'featured',
    },
  ]}>
    {title}
  </h3>
  <p class:list={[
    'text-sm leading-relaxed',
    {
      'text-evolea-text-light': variant === 'default',
      'text-white/80': variant === 'featured',
    },
  ]}>
    {description}
  </p>
</a>

<style>
  .program-icon-white :global(path),
  .program-icon-white :global(circle),
  .program-icon-white :global(rect) {
    stroke: white;
  }
</style>
